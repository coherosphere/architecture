{
  "name": "docs-coherosphere-io",
  "version": "0.0.0",
  "private": true,
  "description": "Documentation site for Coherosphere Architecture (Docusaurus v3)",
  "scripts": {
    // Clean old build + assets
    "clean": "rm -rf build static/assets",
    
    // Robust prebuild: mirror ../assets â†’ static/assets (keeps structure)
    // -a preserves timestamps and permissions
    // -v prints file changes (useful in CI logs)
    // -r handles recursive directories
    // -L follows symlinks if any
    "prebuild": "rm -rf static/assets && mkdir -p static/assets && rsync -a ../assets/ static/assets/",
    
    // Standard Docusaurus scripts
    "start": "docusaurus start",
    "build": "docusaurus build",
    "serve": "docusaurus serve",
    
    // Optional: local preview build (cleans and rebuilds)
    "rebuild": "npm run clean && npm run prebuild && npm run build"
  },
  "dependencies": {
    "@docusaurus/core": "3.9.2",
    "@docusaurus/preset-classic": "3.9.2",
    "@docusaurus/theme-mermaid": "3.9.2",
    "prism-react-renderer": "^2.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "docusaurus",
    "coherosphere",
    "architecture",
    "documentation"
  ],
  "author": "Coherosphere Collective",
  "license": "CC-BY-4.0"
}
